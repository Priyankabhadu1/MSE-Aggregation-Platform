        <!-- Demand forecast card (AI) -->
        <div class="card">
          <div class="card-header"><h3>üìà AI Demand Forecast ¬∑ Jaipur (Blue Pottery)</h3><a href="/demand-forecast">details ‚Üí</a></div>
          <div class="chart-container">
            <canvas id="demandChart"></canvas>
          </div>
          <p style="font-size:12px; color:var(--text-muted); margin-top:8px;">üîÆ Next week: +18% ¬∑ restock recommendation: 240 units</p>
        </div>

        <!-- Roster / Matchmaking card (changes with role) -->
        <div class="card">
          <div class="card-header"><h3><%= user.role === 'seller' ? 'ü§ù Recommended Buyers' : 'üè≠ Top Matched Suppliers' %></h3><a href="/matchmaking">view all</a></div>
