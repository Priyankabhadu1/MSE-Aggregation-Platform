          <svg viewBox="0 0 24 24"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
          <span>Logistics</span>
        </a>
        <a href="/crm" class="nav-item">
          <svg viewBox="0 0 24 24"><path d="M21 11.5V19a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h10.5"/><polyline points="16 2 22 8 16 8"/><line x1="10" y1="14" x2="21" y2="14"/><line x1="10" y1="18" x2="18" y2="18"/></svg>
          <span>CRM / Loyalty</span>
        </a>
        <a href="/payments" class="nav-item">
          <svg viewBox="0 0 24 24"><rect x="2" y="6" width="20" height="12" rx="2"/><path d="M12 12h.01"/><path d="M22 10h-6"/></svg>
          <span>Payments & Subsidy</span>
        </a>
      </div>

      <div class="user-profile">
        <div class="avatar"><%= user.name.charAt(0).toUpperCase() %></div>
        <div class="user-info">
          <div class="user-name"><%= user.name %></div>
          <div class="user-email"><%= user.email %></div>
          <a href="/logout" class="logout-link">Logout</a>
        </div>
      </div>
    </aside>

    <!-- MAIN CONTENT (cream) -->
    <main class="main-content">
      <!-- header -->
      <div class="header">
        <div class="header-left">
          <h2>Welcome back, <span><%= user.name.split(' ')[0] %></span></h2>
          <p>üìç District: Jaipur ¬∑ ODOP: Blue Pottery ¬∑ last sync 2 min ago</p>
        </div>
        <div class="header-right">
          <div class="notification-badge">
            <svg viewBox="0 0 24 24"><path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"/><path d="M13.73 21a2 2 0 0 1-3.46 0"/></svg>
            <span class="badge-dot"></span>
          </div>
          <div class="search-bar">
            <input type="text" placeholder="Search orders, products...">
            <button>üîç</button>
          </div>
        </div>
      </div>

      <!-- STAT CARDS (dynamic based on role) -->
      <div class="widget-grid">
        <% if (user.role === 'seller') { %>
          <div class="stat-card" style="--i:1;"><div class="stat-title">Active Listings</div><div class="stat-value">43</div><div class="stat-trend">‚Üë 12 new this week</div></div>
          <div class="stat-card" style="--i:2;"><div class="stat-title">Orders to fulfill</div><div class="stat-value">18</div><div class="stat-trend">JIT scheduled: 14</div></div>
          <div class="stat-card" style="--i:3;"><div class="stat-title">Revenue (MTD)</div><div class="stat-value">‚Çπ4.2L</div><div class="stat-trend">‚Üë 23% vs last month</div></div>
          <div class="stat-card" style="--i:4;"><div class="stat-title">Loyalty points</div><div class="stat-value">2,450</div><div class="stat-trend">Gold tier</div></div>
        <% } else { %>
          <div class="stat-card" style="--i:1;"><div class="stat-title">Open RFQs</div><div class="stat-value">8</div><div class="stat-trend">3 new quotes</div></div>
          <div class="stat-card" style="--i:2;"><div class="stat-title">Active orders</div><div class="stat-value">12</div><div class="stat-trend">2 shipments today</div></div>
          <div class="stat-card" style="--i:3;"><div class="stat-title">Saved suppliers</div><div class="stat-value">31</div><div class="stat-trend">8 ODOP verified</div></div>
          <div class="stat-card" style="--i:4;"><div class="stat-title">Subsidy claimed</div><div class="stat-value">‚Çπ87K</div><div class="stat-trend">GeM integrated</div></div>
        <% } %>
      </div>

      <!-- ROW: DEMAND FORECAST (chart) + MATCHMAKING (vertical) -->
